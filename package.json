{
  "name": "express-template",
  "author": "Cl√©ber Oliveira - CleberW3b",
  "version": "0.1.0",
  "description": "NodeJs application template.",
  "main": "dist/server.js",
  "scripts": {
    "test:watch": "jest --watch",
    "test": "jest --runInBand",
    "dev": "nodemon",
    "start": "node -r dotenv/config --experimental-modules src/server.js"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cleberw3b/express-template.git"
  },
  "homepage": "https://github.com/Cleberw3b/express-template.git",
  "license": "MIT",
  "keywords": [
    "express-template"
  ],
  "dependencies": {
    "axios": "^0.21.1",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "morgan": "^1.10.0",
    "mongodb": "^3.6.5"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^2.0.7",
    "ssl-root-cas": "^1.3.1",
    "supertest": "^6.1.3"
  },
  "jest": {
    "collectCoverage": true,
    "clearMocks": true,
    "collectCoverageFrom": [
      "./src/**/*.{js,jsx,ts,tsx}",
      "!**/.history/**",
      "!**/mocks/**",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/jest.config.js",
      "!**/expressConfig.js",
      "!**/server.js",
      "!**/utils/db/**",
      "!**/utils/consts.js"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -100
      }
    },
    "setupFiles": [
      "dotenv/config",
      "<rootDir>/test/config/setup.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/config/teardown.js"
    ],
    "verbose": true
  }
}
